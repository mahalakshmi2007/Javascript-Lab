<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Live Search Filter</title>
  <style>
    body { font-family: Arial; display: flex; flex-direction: column; align-items: center; margin-top: 50px; }
    input { padding: 8px; width: 250px; border: 1px solid #ccc; border-radius: 5px; }
    ul { list-style: none; padding: 0; margin-top: 20px; width: 250px; }
    li { padding: 10px; border: 1px solid #ddd; margin-bottom: 5px; border-radius: 5px; cursor: pointer; transition: background 0.2s; }
    li:hover { background: #f2f2f2; }
    li.selected { background: lightgreen; }
  </style>
</head>
<body>
  <h2>Live Search Filter</h2>
  <input type="text" id="searchInput" placeholder="Search items...">
  <ul id="itemList"></ul>

  <script>
    const items = ["Laptop", "Phone", "Tablet", "Monitor", "Keyboard", "Mouse", "Headphones", "Charger", "Camera", "Speaker"];
    const searchInput = document.getElementById("searchInput");
    const itemList = document.getElementById("itemList");

    function renderList(filteredItems) {
      itemList.innerHTML = "";
      filteredItems.forEach(item => {
        const li = document.createElement("li");
        li.textContent = item;
        itemList.appendChild(li);
      });
    }

    function debounce(func, delay) {
      let timer;
      return function(...args) {
        clearTimeout(timer);
        timer = setTimeout(() => func.apply(this, args), delay);
      };
    }

    const filterItems = debounce(() => {
      const query = searchInput.value.toLowerCase();
      const filtered = items.filter(item => item.toLowerCase().includes(query));
      renderList(filtered);
    }, 300);

    searchInput.addEventListener("input", filterItems);

    itemList.addEventListener("click", e => {
      if (e.target.tagName === "LI") {
        e.target.classList.toggle("selected");
        e.stopPropagation();
      }
    });

    document.body.addEventListener("click", () => {
      const selectedItems = document.querySelectorAll("li.selected");
      selectedItems.forEach(li => li.classList.remove("selected"));
    });

    renderList(items);
  </script>
</body>
</html>
