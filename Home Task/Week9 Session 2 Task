<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Product Catalog Viewer</title>
  <style>
    body { font-family: Arial; display: flex; flex-direction: column; align-items: center; margin-top: 40px; }
    #catalog { display: grid; grid-template-columns: repeat(auto-fit, minmax(250px, 1fr)); gap: 15px; width: 80%; }
    .product { border: 1px solid #ccc; padding: 15px; border-radius: 8px; text-align: center; background: #f9f9f9; }
    .error { color: red; font-weight: bold; margin-top: 20px; }
  </style>
</head>
<body>
  <h2>Product Catalog</h2>
  <div id="catalog"></div>
  <div id="errorMsg" class="error"></div>
  <script>
    const catalog = document.getElementById("catalog");
    const errorMsg = document.getElementById("errorMsg");
    const productData = `[{"name":"Wireless Mouse","price":25.99,"description":"A sleek wireless mouse with ergonomic design."},{"name":"Mechanical Keyboard","price":79.99,"description":"RGB backlit keyboard with tactile switches."},{"name":"Noise-Cancelling Headphones","price":129.99,"description":"Over-ear headphones with deep bass and comfort fit."}]`;
    async function loadProducts() {
      try {
        const products = JSON.parse(productData);
        products.forEach(p => {
          const div = document.createElement("div");
          div.className = "product";
          div.innerHTML = `<h3>${p.name}</h3><p>$${p.price.toFixed(2)}</p><p>${p.description}</p>`;
          catalog.appendChild(div);
        });
      } catch {
        errorMsg.textContent = "Error loading product catalog. Please try again later.";
      }
    }
    loadProducts();
  </script>
</body>
</html>
