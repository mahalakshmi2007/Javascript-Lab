<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Dynamic To-Do List</title>
  <style>
    body { font-family: Arial; display: flex; flex-direction: column; align-items: center; margin-top: 50px; }
    #taskInput { padding: 8px; width: 200px; }
    #addBtn { padding: 8px 12px; margin-left: 5px; cursor: pointer; }
    ul { list-style: none; padding: 0; margin-top: 20px; width: 250px; }
    li { display: flex; justify-content: space-between; align-items: center; padding: 8px; border: 1px solid #ccc; border-radius: 5px; margin-bottom: 5px; }
    li.completed { text-decoration: line-through; color: gray; background-color: #f2f2f2; }
    button.removeBtn { background-color: crimson; color: white; border: none; padding: 4px 8px; border-radius: 3px; cursor: pointer; }
  </style>
</head>
<body>
  <h2>Dynamic To-Do List</h2>
  <div>
    <input type="text" id="taskInput" placeholder="Enter task">
    <button id="addBtn">Add Task</button>
  </div>
  <ul id="taskList"></ul>
  <script>
    const taskInput = document.getElementById("taskInput");
    const addBtn = document.getElementById("addBtn");
    const taskList = document.getElementById("taskList");

    addBtn.addEventListener("click", () => {
      const taskText = taskInput.value.trim();
      if (taskText === "") return;
      const li = document.createElement("li");
      li.textContent = taskText;
      const removeBtn = document.createElement("button");
      removeBtn.textContent = "Remove";
      removeBtn.className = "removeBtn";
      removeBtn.onclick = () => li.remove();
      li.onclick = () => li.classList.toggle("completed");
      li.appendChild(removeBtn);
      taskList.appendChild(li);
      taskInput.value = "";
    });
  </script>
</body>
</html>
